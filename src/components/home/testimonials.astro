---
import { TypographyP } from "@components/typography";
import { QuoteIcon } from "lucide-react";

const { data } = Astro.props;
---

<div class='bg-primaryRed w-full relative'>
  <div class='opacity-60 bg-square-pattern absolute top-0 left-0 w-full h-full'>
  </div>
  <div class='mx-auto py-10 md:py-12 px-2 md:px-4'>
    <div
      class='flex flex-col lg:flex-row w-full justify-between items-center divide-y lg:divide-y-0 lg:divide-x'
    >
      {
        data?.map((testi) => (
          <div class='flex mx-auto flex-col gap-6 lg:gap-10 text-white w-full max-w-xl px-6 py-4 relative items-center justify-center'>
            <div class='relative'>
              <QuoteIcon className='rotate-180' />
              <TypographyP>{testi.quote}</TypographyP>
              <QuoteIcon className='ml-auto' />
            </div>
            <div class='text-center lg:text-right w-full'>
              <TypographyP className='font-medium'>{`- ${testi.author}`}</TypographyP>
              <p>{testi?.source}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
