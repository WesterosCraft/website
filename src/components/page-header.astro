---
import type { ImageMetadata } from "astro";
import ContainerBorder from "./container-border.astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  copy: string;
  borderBottom?: boolean;
  bannerUrl?: ImageMetadata;
}

const { title, copy, borderBottom = false, bannerUrl } = Astro.props;
---

<div class='relative'>
  <ContainerBorder borderBottom={borderBottom}>
    <div class='relative max-w-7xl mx-auto py-16 px-4 sm:py-20 sm:px-6 lg:px-8'>
      <div
        class='flex flex-col items-center text-center sm:text-left sm:flex-row gap-12'
      >
        {
          bannerUrl && (
            <Image
              class='w-[100px] md:w-[120px]'
              width={120}
              height={240}
              alt='Banner'
              src={bannerUrl || ""}
            />
          )
        }
        <div class='flex flex-col max-w-3xl'>
          <h1
            class='text-4xl font-extrabold tracking-tight md:text-5xl lg:text-6xl'
          >
            {title}
          </h1>
          <p class='mt-6 max-w-2xl text-xl text-gray-800'>
            {copy}
          </p>
        </div>
      </div>
    </div>
  </ContainerBorder>
</div>
