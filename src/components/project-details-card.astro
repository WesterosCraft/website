---
import type { Location } from "@lib/payload-types";
import { titleize } from "@lib/utils";
import dayjs from "dayjs";

interface ProjectDetails {
  title: "Kings Landing";
  region: "crownlands";
  projectStatus: "completed";
  projectType: "city";
  warp: "/warp kingslanding";
  house: "Lannister";
  application: "https://keystatic.com/docs/reader-api";
  projectLeads: "kjnn";
  dateStarted: "2023-07-30";
  dateCompleted: "2023-08-05";
  difficultyLevel: "6";
  redoAvailable: false;
  serverProject: true;
  // dynmap: [Object]
}
interface Props {
  projectDetails: ProjectDetails;
}

const { projectDetails } = Astro.props;

const items = [
  { name: "Region", value: titleize(projectDetails?.region) },
  { name: "Project Lead(s)", value: projectDetails?.projectLeads },
  { name: "House", value: projectDetails?.house },
  { name: "Status", value: titleize(projectDetails?.projectStatus) },
  { name: "Warp", value: projectDetails?.warp },
  {
    name: "Date Started",
    value: dayjs(projectDetails?.dateStarted).format("MMMM D, YYYY"),
  },
  {
    name: "Date Completed",
    value: dayjs(projectDetails?.dateStarted).format("MMMM D, YYYY"),
  },
];
---

<div>
  <p class="mb-4 text-sm font-semibold tracking-tight">Project Details</p>
  <ul>
    {
      items.map((item) => (
        <li class="text-sm my-2 scroll-my-6 scroll-py-6">
          <span class="font-medium">{item.name}</span>
          {`: ${item.value}`}
        </li>
      ))
    }
  </ul>
</div>
