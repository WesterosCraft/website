type Props = {
  text: string;
  type?: CalloutType;
  emoji?: string;
};

const { text, type = "default", emoji = TypeToEmoji[type] } = Astro.props;
---

<div
  class={cn(
    "overflow-x-auto my-6 flex rounded-lg border py-2 pr-4",
    "contrast-more:border-current contrast-more:dark:border-current",
    classes[type || "default"]
  )}
>
  <div
    class='select-none text-xl pl-3 pr-2 self-center'
    style={{
      fontFamily: '"Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"',
    }}
  >
    {emoji}
  </div>
  <div class='w-full min-w-0 leading-7'>{text}</div>
</div>
