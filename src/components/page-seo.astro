---
import { SEO } from "astro-seo";
import defaultOgImage from "../assets/og.jpg";

const defaults = {
  title: "WesterosCraft",
  description:
    "Explore a meticulously crafted virtual realm inspired by George R.R. Martin's epic fantasy world. From King's Landing to Winterfell, our immersive Minecraft server offers a stunning, player-driven recreation of the Seven Kingdoms",
  ogTitle: "WesterosCraft - Explore the world of Westeros made in Minecraft",
  ogType: "website",
  ogUrl: "https://www.westeroscraft.com",
};

const {
  title,
  description,
  ogTitle,
  ogType,
  ogImage,
  ogUrl,
  ogImageAlt,
  twitterDescription,
} = Astro.props;
---

<SEO
  title={title || defaults.title}
  description={description || defaults.description}
  openGraph={{
    basic: {
      title: ogTitle || defaults.ogTitle,
      type: ogType || defaults.ogType,
      image: ogImage || defaultOgImage.src,
      url: ogUrl || Astro.url || defaults.ogUrl,
    },
  }}
  twitter={{
    creator: "@WesterosCraft",
    card: "summary_large_image",
    title: title || "WesterosCraft",
    image: ogImage || defaultOgImage.src,
    imageAlt: ogImageAlt || defaults.ogTitle,
    description: twitterDescription || defaults.description,
    site: "@WesterosCraft",
  }}
/>
